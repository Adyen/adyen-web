{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,

        "outDir": "./dist/",
        "sourceMap": true,

        "moduleResolution": "node",
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "jsxFactory": "h",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,

        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "suppressImplicitAnyIndexErrors": true,

        "importHelpers": true,

        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": ["src/"],
    "exclude": ["node_modules", "**/*.test.*"]
}
