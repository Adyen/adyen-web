{
    "compilerOptions": {
        /** Emit */
        "declaration": true,
        "outDir": "./dist/types",
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "es2021",
        "jsx": "react",
        "jsxFactory": "h",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "suppressImplicitAnyIndexErrors": true,
        "importHelpers": true,
        "baseUrl": "./",
        "lib": ["dom", "esnext"]
    },
    "include": [
        "./src/**/*",
        "./src/types/custom.d.ts"
    ],
    "exclude": ["node_modules", "./dist/**", "**/*.test.*", "**/*.scss"]
}
